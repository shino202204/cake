<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<h2>ショッピングカート</h2>
<!--<= button_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>-->
<%= form_with model: @cart_item, url: cart_items_destroy_all_path, method: :delete do |f| %>
  <%= f.hidden_field :customer_id, :value => current_customer.id %>
  <%= f.hidden_field :item_id, :value => 0 %>
  <%= f.hidden_field :amount, :value => 0 %>
  <%= f.submit 'カートを空にする' %>
<% end %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</cart_items_path>
      <th>数量</th>
      <th>小計</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <td><%= cart_item.item.name %></td>
    <td><%= cart_item.item.with_tax_price %></td>
    <td><%= cart_item.amount %></td>
    <td><%= cart_item.subtotal %></td>
    <td>
      <%= button_to "削除する", cart_items_path(cart_item.id), method: :delete %>
    </td>
    <% @total_payment += cart_item.subtotal %>
  </tbody>
  <% end %>
</table>

<div>合計金額</div>
<%= @total_payment %>
<div><%= link_to '買い物を続ける', root_path %></div>
<div>情報入力に進む</div>



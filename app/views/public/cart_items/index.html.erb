<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<h2>ショッピングカート</h2>
<%= button_to "カートを空にする", cart_items_destroy_all_path, method: :delete %>

<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</cart_items_path>
      <th>数量</th>
      <th>小計</th>
      <th colspan="5"></th>
    </tr>
  </thead>
  <% @cart_items.each do |cart_item| %>
  <tbody>
    <%= form_with model: @cart_item, url: "/cart_items/#{cart_item.id}", method: :patch do |f| %>
      <td><%= cart_item.item.name %></td>
      <%= f.hidden_field :item_id, :value =>  cart_item.item_id %>
      <%= f.hidden_field :customer_id, :value => current_customer.id %>

      <td><%= cart_item.item.with_tax_price %></td>
      <td>
      <%= f.select :amount, *[1..10], { include_blank: "#{cart_item.amount}" } %>
      <%= f.submit '変更' %>
      </td>
    <% end %>

    <td><%= cart_item.subtotal %></td>
    <td>
      <%= button_to "削除する", "/cart_items/#{cart_item.id}", method: :delete %>
    </td>
    <% @total_payment += cart_item.subtotal %>
  </tbody>
  <% end %>
</table>

<div>合計金額</div>
<%= @total_payment %>
<div><%= link_to '買い物を続ける', root_path %></div>
<% if @total_payment != 0 %>
  <div><%= link_to '情報入力に進む', new_order_path %></div>
<% end %>



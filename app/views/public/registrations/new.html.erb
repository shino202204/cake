<div class="row">
  <div class="col-lg-12">
    <h2 style="font-size: 20px; margin-bottom: 20px; font-weight: bold">
      新規会員登録
    </h2>
  </div>
</div>
<%= form_with model: @customer, url: customer_registration_path do |f| %>
<div class="row">
  <div class="col-lg-3">名前</div>
  <div class="field col-lg-3">
    <%= f.label :last_name, '(姓)', style: "margin-right: 16px" %>
    <%= f.text_field :last_name, autofocus: true, placeholder: '令和' %>
  </div>
  <div class="col-lg-3">
    <%= f.label :first_name, '(名)', style: "margin-right: 16px" %>
    <%= f.text_field :first_name, placeholder: '道子' %>
  </div>
</div>
<div class="row">
  <div class="col-lg-3">フリガナ</div>
  <div class="field col-lg-3">
    <%= f.label :last_name_kana, '(セイ)' %>
    <%= f.text_field :last_name_kana, placeholder: 'レイワ' %>
  </div>
  <div class="field col-lg-3">
    <%= f.label :first_name_kana, '(メイ)' %>
    <%= f.text_field :first_name_kana, placeholder: 'ミチコ' %>
  </div>
</div>
<div class="field row">
  <div class="col-lg-3" style="margin-right: 48px">
    <%= f.label :email, 'メールアドレス' %>
  </div>
  <div class="col-lg-3">
    <%= f.email_field :email, autocomplete: "email", placeholder: 'sample@example.com' %>
  </div>
</div>
<div class="field row">
  <div class="col-lg-3" style="margin-right: 48px">
    <%= f.label :postal_code, '郵便番号(ハイフンなし)' %>
  </div>
  <div class="col-lg-3">
    <%= f.text_field :postal_code, placeholder: '0000000' %>
  </div>
</div>
<div class="field row">
  <div class="col-lg-3" style="margin-right: 48px">
    <%= f.label :address, '住所' %>
  </div>
  <div class="col-lg-3">
    <%= f.text_field :address, placeholder: '東京都渋谷区代々木神園町0-0', style: "width: 400px" %>
  </div>
</div>
<div class="field row">
  <div class="col-lg-3" style="margin-right: 48px">
    <%= f.label :telephone_number, '電話番号(ハイフンなし)' %>
  </div>
  <div class="col-lg-3">
    <%= f.text_field :telephone_number, placeholder: '00000000000' %>
  </div>
</div>
<div class="field row">
  <div class="col-lg-3" style="margin-right: 48px">
    <%= f.label :password, 'パスワード' %>
    <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %>文字以上)</em>
    <% end %>
  </div>
  <div class="col-lg-3">
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>
</div>
<div class="field row">
  <div class="col-lg-3" style="margin-right: 48px">
    <%= f.label :password_confirmation, 'パスワード(確認用)' %>
  </div>
  <div class="col-lg-3">
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>
</div>
<div class="field row" style="margin-top: 20px">
  <div class="col-lg-3" style="margin-right: 48px"></div>
  <div class="col-lg-3">
    <%= f.submit "新規登録", class: "btn btn-success", style: "width: 185px" %>
  </div>
</div>
<% end %>

<h2 style="font-size: 20px; margin-bottom: 20px; margin-top: 30px; font-weight: bold">
  既に登録済みの方
</h2>
<!--<= render "public/shared/links" %>-->
<p>
  <%= link_to 'こちら', customer_session_path %> からログインしてください。
</p>

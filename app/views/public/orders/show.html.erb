<div class="row">
  <div class="col-lg-5">
    <h2 style="font-size: 20px">注文履歴詳細</h2>
  </div>
</div>

<div class="row">
  <div class="col-lg-5">
    <p style="font-weight: bold">注文情報</p>
    <table class="table table-bordered">
      <tr>
        <th style="background: #eee">注文日</th>
        <td><%= l @order.created_at %></td>
      </tr>
      <tr>
        <th style="background: #eee">配送先</th>
        <td><%= @order.order_display %></td>
      </tr>
      <tr>
        <th style="background: #eee">支払方法</th>
        <td><%= @payment_method %></td>
      </tr>
      <tr>
        <th style="background: #eee">ステータス</th>
        <td><%= @status %></td>
      </tr>
    </table>
  </div>

  <div class="col-lg-4">
    <p style="font-weight: bold">請求情報</p>
    <table class="table table-bordered">
      <tr>
        <th style="background: #eee">商品合計</th>
        <td><%= @order.total_payment %></td>
      </tr>
      <tr>
        <th style="background: #eee">配送料</th>
        <td><%= @order.shipping_cost %></td>
      </tr>
      <tr>
        <th style="background: #eee">ご請求額</th>
        <td><%= @order.total_payment + @order.shipping_cost %></td>
      </tr>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-lg-8">
    <p style="font-weight: bold">注文内容</p>
    <table class="table table-inverse table-bordered">
      <thead style="background: #eee">
        <tr>
          <th>商品</th>
          <th>単価（税込）</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <% @order_details.each do |order_detail| %>
      <tbody>
        <td><%= order_detail.item.name %></td>
        <td><%= order_detail.price %>円</td>
        <td><%= order_detail.amount %></td>
        <td><%= order_detail.price * order_detail.amount %></td>
      </tbody>
    <% end %>
    </table>
  </div>
</div>
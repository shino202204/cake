<h1>Public::Orders#index</h1>
<p>Find me in app/views/public/orders/index.html.erb</p>

<h2>注文履歴一覧</h2>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>注文商品</th>
      <th>支払金額</th>
      <th>ステータス</th>
      <th>注文詳細</th>
      <th colspan="6"></th>
    </tr>
  </thead>
  <% @orders.each do |order| %>
  <tbody>
    <td><%= order.created_at %></td>
    <td><%= order.postal_code %></td>
    <td><%= order.address %></td>
    <td><%= order.name %></td>
    <td><%= order.shipping_cost %></td>
    <td><%= order.status %></td>
    <td>
      <%= link_to '表示する', order_path(order.id) %>
    </td>
  </tbody>
  <% end %>
</table>

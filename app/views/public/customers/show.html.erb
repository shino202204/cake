<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-12 px-5 px-sm-0">
    <h2 style="font-size: 20px; margin-bottom: 20px;" class="col-lg-12">マイページ</h2>
    <div class="row" style="margin-bottom: 20px">
      <div class="col-lg-8">
        <div style="display: flex; margin-bottom: 10px">
          <div style="font-size: 20px; font-weight: bold; padding-right: 20px">登録情報</div>
          <div>
            <%= link_to '編集する', '/customers/edit', class: "btn btn-success" %><br>
          </div>
        </div>
        <table class="table table-bordered">
          <tr>
            <th style="background: #eee">氏名</th>
            <td><%= @customer.last_name+''+@customer.first_name %></td>
          </tr>
          <tr>
            <th style="background: #eee">カナ</th>
            <td><%= @customer.last_name_kana+''+@customer.first_name_kana %></td>
          </tr>
          <tr>
            <th style="background: #eee">郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          <tr>
            <th style="background: #eee">住所</th>
            <td><%= @customer.address %></td>
          </tr>
          <tr>
            <th style="background: #eee">電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          <tr>
            <th style="background: #eee">メールアドレス</th>
            <td><%= @customer.email %></td>
          </tr>
        </table>
      </div>
    </div>

    <div style="display: flex; margin-bottom: 30px" class="col-lg-12">
      <div style="padding-right: 40px">
        <h3 style="font-size: 20px; font-weight: bold">配送先</h3>
      </div>
      <div>
        <span><%= link_to '一覧を見る', addresses_path, method: :get, class: "btn btn-primary" %></span>
      </div>
    </div>

    <div style="display: flex" class="col-lg-12">
      <div style="padding-right: 20px">
        <h3 style="font-size: 20px; font-weight: bold">注文履歴</h3>
      </div>
      <div>
        <span><%= link_to '一覧を見る', orders_path, class: "btn btn-primary" %></span>
      </div>
    </div>
  </div>
</div>
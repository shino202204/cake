<h1>Public::Items#index</h1>
<p>Find me in app/views/public/items/index.html.erb</p>

<h2>商品一覧</h2>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>価格</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <% @items.each do |item| %>
  <tbody>
    <td><%= link_to image_tag(item.get_image(100, 100)), item_path(item.id) %></td>
    <td><%= item.name %></td>
    <td><%= item.price %></td>
  </tbody>
  <% end %>
</table>

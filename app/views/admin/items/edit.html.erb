<h1>Admin::Items#edit</h1>
<p>Find me in app/views/admin/items/edit.html.erb</p>

<% if @item.errors.any? %>
  <%= @item.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @item.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<h2>商品編集</h2>
<%= form_with model: @item, url: admin_item_path(@item.id), method: :patch do |f| %>
<div>
  <label>商品画像</label>
  <%= f.file_field :image, accept: "image/*" %>
</div>
<div>
  <label>商品名</label>
  <%= f.text_field :name %>
</div>
<div>
  <label>商品説明</label>
  <%= f.text_area :introduction %>
</div>
  <label>ジャンル</label>
  <%= f.select :genre_id, [['ケーキ',1], ['プリン',2], ['焼き菓子',3], ['キャンディ',4]], { include_blank: '--選択してください--'} %>
</div>
<div>
  <label>税抜価格</label>
  <%= f.text_field :price %>
</div>
<div>
  <label>販売ステータス</label>
  <%= f.radio_button :is_active,true,checked: true %>販売中<%= f.radio_button :is_active, false %>販売停止中
</div>
<div>
  <%= f.submit '変更を保存' %>
</div>
<% end %>

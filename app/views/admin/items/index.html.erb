<div class="row">
  <div class="col-lg-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2 style="font-size: 25px; margin-bottom: 20px;">商品一覧</h2>

  <div class="text-right" style="margin-bottom: 10px; padding-right: 10px">
  <!--<= link_to "商品新規登録ボタン", new_admin_item_path %>-->
  <%= link_to new_admin_item_path, class: "btn btn-outline-secondary rounded-circle", method: :get do %>
    <i class="fa-solid fa-plus"></i>
  <% end %>
  </div>

  <table class="table table-hover table-inverse">
    <thead style="background: #eee; font-weight: bold">
      <tr>
        <th>商品ID</th>
        <th>商品名</th>
        <th>税抜価格</th>
        <th>ジャンル</th>
        <th>ステータス</th>
        <th colspan="5"></th>
      </tr>
    </thead>
    <% @items.each do |item| %>
    <tbody>
      <td><%= item.id %></td>
      <td><%= link_to item.name, admin_item_path(item.id) %></td>
      <td><%= item.price %></td>
      <td><%= item.genre.name %></td>
      <% if item.is_active == true %>
        <td style="color: limegreen; font-weight:bold">販売中</td>
      <% else %>
        <td style="color: gray" >販売停止中</td>
      <% end %>
    </tbody>
    <% end %>
  </table>
  </div>
</div>
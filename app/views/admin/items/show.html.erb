<div class="row">
  <div class="col-lg-4">
  <h2 style="font-size: 25px; margin-bottom: 20px;">商品詳細</h2>
    <%= image_tag(@item.get_image(250,250))%>
  </div>

  <div class="col-lg-8" style="margin-top: 45px">
  <div style="margin-bottom: 10px">
    <label style="padding-right: 60px">商品名</label>
    <span style="padding-left: 55px"><%= @item.name %></span>
  </div>
  <div style="margin-bottom: 10px">
    <label style="padding-right: 60px">商品説明</label>
    <span style="padding-left: 40px"><%= @item.introduction %></span>
  </div>
  <div style="margin-bottom: 10px">
    <label style="padding-right: 60px">ジャンル</label>
    <span style="padding-left: 45px"><%= @item.genre.name %></span>
    <div style="margin-bottom: 10px">
      <label style="padding-right: 60px">税込価格<br>
      <span style="font-size: 15px">(税抜価格)</span></label>
      <span style="position: relative; padding-left: 40px">
        <span style="position: absolute; top: -20px">
          ¥<%= @item.with_tax_price %>(<%= @item.price %>)
        </span>
      </span>
    </div>
    <div style="margin-bottom: 10px">
      <label style="padding-right: 60px">販売ステータス</label>
      <% if @item.is_active == true %>
        <span style="color: limegreen; font-weight:bold">販売中</span>
      <% else %>
        <span style="color: gray">販売停止中</span>
      <% end %>
    </div>
    <p>
      <%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %>
    </p>
    </div>
  </div>
</div>
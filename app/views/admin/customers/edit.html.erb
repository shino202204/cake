<h2><%= @customer.last_name+@customer.first_name %>さんの会員情報編集</h2>
<%= form_with model: @customer, url: admin_customer_path(@customer.id), method: :patch do |f|%>
  <div class="field">
    <%= f.label :last_name %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </div>

  <div class="field">
    <%= f.label :last_name_kana %>
    <%= f.text_field :last_name_kana %>
  </div>

  <div class="field">
    <%= f.label :first_name_kana %>
    <%= f.text_field :first_name_kana %>
  </div>

  <div class="field">
    <%= f.label :postal_code %>
    <%= f.text_field :postal_code %>
  </div>

  <div class="field">
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>

  <div class="field">
    <%= f.label :telephone_number %>
    <%= f.text_field :telephone_number %>
  </div>

  <div class="field">
    <%= f.label :email %>
    <%= f.email_field :email, autocomplete: "email" %>
  </div>

  <div>
  <label>会員ステータス</label>
    <%= f.radio_button :is_deleted, false %>有効<%= f.radio_button :is_deleted, true %>退会
  </div>

  <div>
    <%= f.submit '変更を保存' %>
  </div>
<% end %>
<h2>会員一覧</h2>
<table class="table">
  <thead>
    <tr>
      <th>会員ID</th>
      <th>氏名</th>
      <th>メールアドレス</th>
      <th>ステータス</th>
      <th colspan="4"></th>
    </tr>
  </thead>
  <% @customers.each do |customer| %>
  <tbody>
    <td><%= customer.id %></td>
    <td><%= link_to customer.last_name+customer.first_name, admin_customer_path(customer.id)%></td>
    <td><%= customer.email %></td>
    <% if customer.is_deleted == false %>
      <td>有効</td>
    <% else %>
      <td>退会</td>
    <% end %>
  </tbody>
  <% end %>
</table>
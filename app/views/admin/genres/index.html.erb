  <div class="row">
    <div class="col-lg-5 col-md-5 col-lg-5 px-5 px-sm-0">
    <h2 style="font-size: 25px; margin-bottom: 20px;">ジャンル一覧・追加</h2>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <label style="margin-bottom: 30px">ジャンル名</label>
      <%= f.text_field :name, placeholder: 'ジャンル名' %>
      <%= f.submit '新規登録', class: "btn btn-success" %>
    <% end %>

    <table class="table table-hover table-inverse">
      <thead style="background: #eee; font-weight: bold">
        <tr>
          <th>ジャンル</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <% @genres.each do |genre| %>
      <tbody>
        <td><%= genre.name %></td>
        <td>
          <%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %>
        </td>
      </tbody>
      <% end %>
    </table>

    </div>
  </div>
<h1>Admin::Genres#index</h1>
<p>Find me in app/views/admin/genres/index.html.erb</p>

<h2>ジャンル一覧・追加</h2>
<%= form_with model: @genre, url: admin_genres_index_path, method: :post do |f| %>
    <div>
      <label>ジャンル名</label>
      <%= f.text_field :name %>
    </div>
    <div>
      <%= f.submit '新規登録' %>
    </div>
<% end %>

<table>
  <thead>
    <tr>
      <th>ジャンル</th>
      <th colspan="2"></th>
    </tr>
  </thead>
  <% @genres.each do |genre| %>
  <tbody>
    <td><%= genre.name %></td>
    <td>
      <%= link_to '編集する', admin_path(genre.id) %>
    </td>
  </tbody>
  <% end %>
</table>
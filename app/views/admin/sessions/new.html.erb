<div class="row">
  <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2 style="font-size: 25px; margin-bottom: 20px;">管理者ログイン</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field" style="margin-bottom: 15px">
      <%= f.label :email, 'メールアドレス', style: "padding-right: 10px"%>
      <%= f.email_field :email, autofocus: true, placeholder: "sample@example.com", autocomplete: "email" %>
    </div>

    <div class="field" style="margin-bottom: 20px">
      <%= f.label :password, 'パスワード', style: "padding-right: 40px" %>
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <div class="actions">
      <%= f.submit "ログイン", class: "btn btn-primary" %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>

  </div>
</div>